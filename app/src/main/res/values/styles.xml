<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/secondaryColor</item> <!-- Icon color-->
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item> <!-- System bar-->
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">@color/backgroundColor</item> <!-- BottomBar color-->
        <item name="colorOnSurface">@color/primaryDarkColor</item> <!-- BottomBar Background color-->
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorOnBackground">#212121</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/primaryColor</item>
        <item name="backgroundColor"> @color/primaryDarkColor</item>
        <item name="subtitleTextAppearance">@style/AppSubtitleTextAppearance</item>
    </style>

    <style name="AppSubtitleTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
